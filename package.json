{
  "name": "koishi-boilerplate",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "build": "koishi-scripts build",
    "bump": "koishi-scripts bump",
    "clean": "koishi-scripts clean",
    "dep": "koishi-scripts dep",
    "new": "koishi-scripts new",
    "pub": "koishi-scripts pub",
    "setup": "koishi-scripts setup",
    "dev": "cross-env NODE_ENV=development koishi start -r esbuild-register -r yaml-register -r tsconfig-paths/register --watch",
    "start": "koishi start"
  },
  "devDependencies": {
    "@koishijs/client": "^3.2.10",
    "@koishijs/scripts": "^1.3.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.4",
    "yaml-register": "^0.1.0"
  },
  "dependencies": {
    "@koishijs/cli": "^4.6.3",
    "@koishijs/plugin-adapter-discord": "^2.0.9",
    "@koishijs/plugin-adapter-onebot": "^4.2.2",
    "@koishijs/plugin-adapter-telegram": "^2.2.4",
    "@koishijs/plugin-console": "^3.2.10",
    "@koishijs/plugin-dataview": "^1.2.4",
    "@koishijs/plugin-logger": "^1.2.2",
    "@koishijs/plugin-manager": "^1.8.0",
    "@koishijs/plugin-sandbox": "^1.1.1",
    "@koishijs/plugin-status": "^5.3.6",
    "koishi": "^4.6.3"
  }
